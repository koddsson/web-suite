{
  "name": "@koddsson/micropub-client",
  "private": true,
  "version": "1.0.0",
  "description": "A micropub client",
  "main": "index.ts",
  "scripts": {
    "start": "deno run --allow-read --allow-write --allow-net --allow-env src/index.ts",
